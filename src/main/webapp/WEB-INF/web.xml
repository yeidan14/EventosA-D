<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Registrar_Usuario</servlet-name>
        <servlet-class>Controller.Registrar_Usuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login_Admin</servlet-name>
        <servlet-class>Controller.Login_Admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout_Admin</servlet-name>
        <servlet-class>Controller.Logout_Admin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registrar_Usuario</servlet-name>
        <url-pattern>/Registrar_Usuario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login_Admin</servlet-name>
        <url-pattern>/Login_Admin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout_Admin</servlet-name>
        <url-pattern>/Logout_Admin.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
